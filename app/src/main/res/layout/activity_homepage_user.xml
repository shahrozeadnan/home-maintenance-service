<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Drawer_layout"
    tools:context=".Customer.homepage_user">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Drawer_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fyp2"
        android:orientation="vertical"
        android:backgroundTint="#D1E4F4"
        android:backgroundTintMode="screen">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#267CA5"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="SERVICES" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="368dp"
            android:layout_height="52dp"
            android:layout_marginTop="188dp"
            android:text="@string/SelectService"
            android:textColor="#267CA5"
            android:textSize="30sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.604"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/plumbing"
            android:layout_width="183dp"
            android:layout_height="66dp"
            android:layout_marginTop="620dp"
            android:text="Plumbing"
            android:textColor="@color/white"
            android:backgroundTint="#267CA5"
            app:layout_constraintHorizontal_bias="0.409"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/paint"
            android:layout_width="183dp"
            android:layout_height="66dp"
            android:layout_marginTop="504dp"
            android:text="Painting"
            android:textColor="@color/white"
            android:backgroundTint="#267CA5"
            app:layout_constraintHorizontal_bias="0.409"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/carpentry"
            android:layout_width="183dp"
            android:layout_height="66dp"
            android:layout_marginTop="392dp"
            android:text="@string/carpentry"
            android:textColor="@color/white"
            android:backgroundTint="#267CA5"
            app:layout_constraintHorizontal_bias="0.409"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/electrical"
            android:layout_width="183dp"
            android:layout_height="66dp"
            android:layout_marginTop="276dp"
            android:text="Electrical"
            android:textColor="@color/white"
            android:backgroundTint="#267CA5"
            app:layout_constraintHorizontal_bias="0.409"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/main_menu"
        android:background="@drawable/fyp2"
        android:backgroundTint="#D1E4F4"
        android:backgroundTintMode="screen"/>
</androidx.drawerlayout.widget.DrawerLayout>