<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fyp2"
    android:backgroundTint="#D1E4F4"
    android:backgroundTintMode="screen"
    tools:context=".Worker.PhoneNumVerification">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/phoneverifytoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#267CA5"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="Phone Number Verification" />

    <EditText
        android:id="@+id/phone_number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneverifytoolbar"
        android:layout_marginTop="50dp"
        android:hint="Enter Phone Number"
        android:inputType="phone" />

    <Button
        android:id="@+id/send_verification_code_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Send Verification Code" />

    <EditText
        android:id="@+id/verification_code_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_verification_code_button"
        android:layout_marginTop="30dp"
        android:hint="Enter Verification Code"
        android:inputType="number" />

    <Button
        android:id="@+id/verify_code_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verification_code_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Verify Code" />

</RelativeLayout>
